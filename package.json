{
  "name": "elms",
  "version": "1.0.0",
  "description": "Examination Logistics Management System",
  "private": true,
  "workspaces": [
    "apps/client",
    "apps/server"
  ],
  "scripts": {
    "dev:client": "cd apps/client && npm run dev",
    "dev:server": "cd apps/server && npm run start:dev",
    "dev": "npm run dev:server & npm run dev:client",
    "build:client": "cd apps/client && npm run build",
    "build:server": "cd apps/server && npm run build",
    "build": "npm run build:server && npm run build:client"
  }
}

